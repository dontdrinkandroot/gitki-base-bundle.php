			{{ form_errors(form.message) }}
			{{ form_widget(form.message, { attr: {class: 'form-control'} }) }}
		</div>
	</div>
	<div class="form-submit">
		{{ form_widget(form.save, { attr: {class: 'btn btn-primary'} , label: 'Отправить на писмото' }) }}
	</div>


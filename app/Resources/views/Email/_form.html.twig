			{{ form_errors(form.subject) }}
			{{ form_widget(form.subject, { attr: {class: 'form-control', autofocus: 'autofocus'} }) }}
		</div>
	</div>
	<div class="form-group">
		{{ form_label(form.message, 'Съобщение:', { label_attr: {class: 'col-sm-2 control-label'} }) }}

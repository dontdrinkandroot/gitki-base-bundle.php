<id>{{ person.id }}</id>
<slug>{{ person.slug }}</slug>
<name>{{ person.name }}</name>
{% if person.orig_name is not empty %}<orig-name>{{ person.orig_name }}</orig-name>{% endif %}
{% if person.real_name is not empty %}<real-name>{{ person.real_name }}</real-name>{% endif %}
{% if person.oreal_name is not empty %}<orig-real-name>{{ person.oreal_name }}</orig-real-name>{% endif %}
<country>{{ person.country }}</country>
{% if person.info is not empty %}<info>{{ person.info }}</info>{% endif %}
{% if person.person is defined and person.person is not empty %}
	<person>
		{% include 'App:Person:person.xml.twig' with {'person': person.person} %}
	</person>
{% endif %}

{% if pager is defined and pager.show %}
	{% if pager.has_prev %}
		<link rel="prev" type="application/atom+xml" href="{{ path(route|default(current_route), route_params|default({})|merge({'page': pager.prev, '_format': 'opds'})) }}" title="Предыдущая страница"/>
	{% endif %}
	{% if pager.has_next %}
		<link rel="next" type="application/atom+xml" href="{{ path(route|default(current_route), route_params|default({})|merge({'page': pager.next, '_format': 'opds'})) }}" title="Следующая страница"/>
	{% endif %}
{% endif %}

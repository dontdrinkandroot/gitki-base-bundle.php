{% extends 'DdrGitkiBundle::base.html.twig' %}
{% block title %} - {{ path }}{% endblock %}
{% block body_class %}wiki{% endblock %}
{% block header %}
    <header>
        {% block header_content %}
            {% if ddr_gitki_show_breadcrumbs %}
                <div class="action-bar">
                    <div class="container">
                        {% block actions %}
                        {% endblock %}
                        {{ include('DdrGitkiBundle::breadcrumb.partial.html.twig', {'path' : path}) }}
                    </div>
                </div>
            {% endif %}
        {% endblock header_content %}
    </header>
{% endblock header %}

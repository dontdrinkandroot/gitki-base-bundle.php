{% extends 'DdrGitkiBundle::browse.html.twig' %}
{% block ddr_gitki_title %} - {{ path }} - Add Page{% endblock ddr_gitki_title %}
{% block ddr_gitki_main_content %}
    <div class="page-header">
        <h1>Add Folder</h1>
    </div>
    {{ form(form) }}
{% endblock ddr_gitki_main_content %}
{% block ddr_gitki_javascript %}
    {{ parent() }}
    <script type="text/javascript">

        $('#form_title').bind('input propertychange', function () {
            var $this = $(this);
            var parts = $this.val().split(' ');
            var dirname = '';
            for (var i = 0; i < parts.length - 1; i++) {
                dirname += parts[i].toLowerCase();
                dirname += '_';
            }
            dirname += parts[parts.length - 1].toLowerCase();
            $('#form_dirname').val(dirname);
        });

    </script>
{% endblock ddr_gitki_javascript %}

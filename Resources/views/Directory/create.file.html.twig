{% extends '@DdrGitki/browse.html.twig' %}

{% block ddr_gitki_title %} - {{ path }} - Create File{% endblock ddr_gitki_title %}

{% block ddr_gitki_main_content %}

    <div class="page-header">
        <h1>Create File</h1>
    </div>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

{% endblock ddr_gitki_main_content %}

{% block ddr_gitki_javascript %}
    {{ parent() }}
    <script type="text/javascript">

        $('#form_title').bind('input propertychange', function () {
            var $this = $(this);
            var parts = $this.val().split(' ');
            var filename = '';
            for (var i = 0; i < parts.length - 1; i++) {
                filename += parts[i].toLowerCase();
                filename += '_';
            }
            filename += parts[parts.length - 1].toLowerCase();
            $('#form_filename').val(filename);
        });

    </script>
{% endblock ddr_gitki_javascript %}
